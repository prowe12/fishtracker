{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "incremental": true,
      "tsBuildInfoFile": "./.tsbuildinfo"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }